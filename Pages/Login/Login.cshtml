@page
@model PrototypeDatabase.Pages.Login.LoginModel
@{
}


<h1>:: Login ::</h1>

<br />
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div class="form-group">
                <label class="control-label">Login</label>
                <input type="text" asp-for="NewUser.Username" class="form-control" required />
                <span asp-validation-for="NewUser.Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewUser.UserPass" class="control-label">Password</label>
                <input asp-for="NewUser.UserPass" type="password" class="form-control" />
                <span asp-validation-for="NewUser.UserPass" class="text-danger"></span>
            </div>

            <div>
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>

        </form>

        <div>
            <p style="color: red">@Model.Message</p>
        </div>

        <div>
            <p> <a asp-page="/ForgotPassword/VerifyEmail"> Forgot Password </a> </p>
        </div>
    </div>
</div>
